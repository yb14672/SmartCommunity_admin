<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zy_admin.sys.dao.SysUserRoleDao">

    <resultMap id="BaseResultMap" type="com.zy_admin.sys.entity.SysUserRole">
        <!--@Table sys_user_role-->
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          user_id, role_id
        from sys_user_role
        where user_id = #{userId}
    </select>

    <select id="getListByIds" resultMap="BaseResultMap">
        select
          user_id, role_id
        from sys_user_role
        where role_id in
        <foreach collection="roleIdList" item="role_id" separator="," open="(" close=")">
            #{role_id}
        </foreach>
    </select>



    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          user_id, role_id
        from sys_user_role
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          user_id, role_id
        from sys_user_role
    </select>
    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from sys_user_role
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userId" useGeneratedKeys="true">
        insert into sys_user_role()
        values ()
    </insert>

    <insert id="insertBatchByRoleId">
        insert into sys_user_role
        values
        <foreach collection="roleIdList" item="role_id" separator=",">
        (${userId},${role_id})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="userId" useGeneratedKeys="true">
        insert into sys_user_role()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
        on duplicate key update
        
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sys_user_role
        <set>
        </set>
        where user_id = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteByUserId">
        delete from sys_user_role where user_id = #{userId}
    </delete>

</mapper>

